// prisma/schema.prisma

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  KARYAWAN
}

enum IzinType {
  SAKIT
  CUTI
  IZIN_LAINNYA
}

enum IzinStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  role      Role      @default(KARYAWAN)
  divisi    String    @default("Belum Ditentukan")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  absensi   Absensi[]
  izin      Izin[]
}

model Absensi {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  date      DateTime
  checkIn   DateTime?
  checkOut  DateTime?
  createdAt DateTime  @default(now())
}

model Izin {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  tanggal   DateTime
  type      IzinType
  alasan    String
  status    IzinStatus @default(PENDING)
  createdAt DateTime   @default(now())
}
